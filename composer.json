{
    "name": "w3code/w3c-aiconnector",
    "description": "Connector to different AI models",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Mehdi Guermazi",
            "email": "mehdi.guermazi@w3code.tn"
        }
    ],
    "require": {
        "php": ">=8.1",
        "typo3/cms-core": "^12.4 || ^13.4",
        "typo3/coding-standards": "^0.8.0",
        "typo3/testing-framework": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "W3code\\W3cAIConnector\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "W3code\\W3cAIConnector\\Tests\\": "Tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "bin-dir": ".Build/bin",
        "sort-packages": true,
        "vendor-dir": ".Build/vendor"
    },
    "replace": {
        "w3code/w3c-aiconnector": "self.version"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "extension-key": "w3c_aiconnector",
            "web-dir": ".Build/Web"
        }
    },
    "scripts": {
        "ci:php": "php-cs-fixer fix --config=Build/php-cs-fixer/php-cs-fixer.php -v --dry-run --using-cache no --diff",
        "fix:php": "php-cs-fixer fix --config=Build/php-cs-fixer/php-cs-fixer.php"
    }
}
